<%- include('./partials/header') %>

<% 
    let grandTotal = 0;
    user.cartDetail.forEach(function(item){ 
        let itemTotal = item.price - (item.discount || 0) +20 ; // Calculate item total after discount
        grandTotal += itemTotal ; // Assuming Platform Fee of Rs 20 applies to every item
%>

    <div class="flex items-start px-20 py-20 gap-10">
        <div class="w-[15%] rounded-md overflow-hidden">
            <div class="w-full flex justify-center items-center h-50 bg-[<%= item.bgcolor %>]">
                <img class="h-[15rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]" >
                <h3 class="text-2xl"> <%= item.name %></h3>
                <div class="flex items-center gap-2">
                    <a class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line" href="/increase/<%= item._id%>" >  </a>
                    <div class="px-4 py-3 rounded-md bg-white text-black"> <%= item.quantity%>  </div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>] ">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">Rs <%= itemTotal %></h2> <!-- Display item total -->
            </div>
        </div>
        <div class="w-[70%]">
            
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>Rs <%= item.price %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>Rs <%= item.discount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>Rs 20</h4> <!-- Fixed platform fee -->
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4> <!-- Assuming shipping is free -->
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl"> Total Amount for this item </h3>
                <h3 class="font-semibold text-xl text-green-600">Rs <%= itemTotal %></h3>
            </div>

            <div class="flex mt-2">
                <h4 class="w-1/3"> Delete</h4>
                <a class="text-red-600" href="/delete/<%= item._id%>"> delete item</a> <!-- Assuming shipping is free -->
            </div>
            
        </div>
    </div>
    
<% }) %>

<!-- Display grand total -->
<div class="w-full h-screen px-20 py-20">
    <div class="flex justify-between">
        <h3 class="text-2xl">Grand Total</h3>
        <h3 class="text-2xl font-semibold text-green-600">Rs <%= grandTotal %></h3>
    </div>
</div>

<%- include('./partials/footer') %>
